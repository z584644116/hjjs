{
  "name": "env-calculator",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start -H 0.0.0.0 -p 3000",
    "lint": "eslint",
    "setup": "node scripts/setup-local-storage.js",
    "dev:setup": "npm run setup && npm run dev",
    "docker:build": "docker build -t env-calculator .",
    "docker:run": "docker run -p 3000:3000 -v $(pwd)/data:/app/data env-calculator",
    "health": "curl -f http://localhost:3000/api/health || echo 'Health check failed'",
    "test:storage": "node scripts/test-storage.js",
    "deploy": "bash scripts/deploy.sh",
    "deploy:staging": "bash scripts/deploy.sh --env staging",
    "deploy:production": "bash scripts/deploy.sh --env production",
    "deploy:build-only": "bash scripts/deploy.sh --build-only",
    "deploy:dry-run": "bash scripts/deploy.sh --dry-run"
  },
  "dependencies": {
    "@fluentui/react-components": "^9.70.0",
    "@supabase/supabase-js": "^2.57.4",
    "@types/uuid": "^10.0.0",
    "next": "15.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "uuid": "^13.0.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
